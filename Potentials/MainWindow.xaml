<Window x:Class="Potentials.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Potentials"
        
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        xmlns:input="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"

        mc:Ignorable="d"
        Title="Banana_Graph" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="587*"/>
        </Grid.ColumnDefinitions>
        <WpfPlot x:Name="All_AP_Plot" HorizontalAlignment="Left" Margin="49,439,0,0" VerticalAlignment="Top" Width="1050" Height="225" Grid.Column="1"/>
        <Button x:Name="Previos_AP_Btn" Content="&lt;" HorizontalAlignment="Left" Margin="32,552,0,0" VerticalAlignment="Top" Click="Previos_AP_Btn_Click" Grid.Column="1"/>
        <Button x:Name="Next_AP_Btn" Content="&gt;" HorizontalAlignment="Left" Margin="1099,542,0,0" VerticalAlignment="Top" Click="Next_AP_Btn_Click" Grid.Column="1">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
        </Button>
        <Button x:Name="OpenfileBtn" Content="Open flie" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="OpenfileBtn_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="FileNameTextBox" HorizontalAlignment="Left" Margin="41,10,0,0" TextWrapping="Wrap" Text="Here will be name of opened file" VerticalAlignment="Top" Width="180" IsEnabled="False" Grid.Column="1"/>
        <Button x:Name="PlotAllBtn" Content="PlotAll" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Click="PlotAllBtn_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TimeTextBox" HorizontalAlignment="Left" Margin="10,94,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Label x:Name="FindAP_Label" Content="Input the time since the beginning of the experiment (in format mm:ss:ff)" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="FindAPBtn" Content="FindAP" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Click="FindAPBtn_Click" Grid.ColumnSpan="2"/>
        <WpfPlot x:Name="One_AP_Plot" Margin="791,0,0,0" VerticalAlignment="Top" Height="356" Grid.Column="1"/>
        <Label x:Name="Experiment_duration_label" Content="Experiment duration:" HorizontalAlignment="Left" Margin="109,90,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="SaveAP_Btn" Content="Save" HorizontalAlignment="Left" Margin="30,117,0,0" VerticalAlignment="Top" Click="SaveAP_Btn_Click" Grid.Column="1"/>
        <Label x:Name="RdМ_lbl" Content="Radius of curvature (R)&#xA;Velocity (dV/dt)4 &#xA;Velocity (dV/dt)0" HorizontalAlignment="Left" Margin="821,361,0,0" VerticalAlignment="Top" Width="130" Visibility="Hidden" Grid.Column="1"/>
        <Label x:Name="RdV_num_lbl" Content="=&#xD;&#xA;=&#xD;&#xA;=" HorizontalAlignment="Left" Margin="951,361,0,0" VerticalAlignment="Top" Height="55" Width="90" Visibility="Hidden" Grid.Column="1"/>
        <WpfPlot x:Name="RdV0_Plot" Margin="8,178,919,0" VerticalAlignment="Top" Height="271" Grid.ColumnSpan="2"/>
        <WpfPlot x:Name="RdV4_Plot" Margin="259,178,643,0" VerticalAlignment="Top" Height="271" Grid.Column="1"/>
        <WpfPlot x:Name="dR_Plot" Margin="531,178,370,0" VerticalAlignment="Top" Height="271" Grid.Column="1"/>
    </Grid>

</Window>
