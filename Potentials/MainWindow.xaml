<Window x:Class="Potentials.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Potentials"
        
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        xmlns:input="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"

        mc:Ignorable="d"
        Title="Banana_Graph" Height="800" Width="1520"
        Icon="system32.ico"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="237*"/>
            <ColumnDefinition Width="1135*"/>
        </Grid.ColumnDefinitions>
        <WpfPlot x:Name="All_AP_Plot" HorizontalAlignment="Left" Margin="40,403,0,0" VerticalAlignment="Top" Width="1440" Height="370" Grid.ColumnSpan="3"/>
        <Button x:Name="Previos_AP_Btn" Content="&lt;" HorizontalAlignment="Left" Margin="20,573,0,0" VerticalAlignment="Top" Click="Previos_AP_Btn_Click" FontFamily="Bahnschrift Light" FontWeight="Bold" FontSize="36"/>
        <Button x:Name="Next_AP_Btn" Content="&gt;" HorizontalAlignment="Left" Margin="1095,573,0,0" VerticalAlignment="Top" Click="Next_AP_Btn_Click" FontFamily="Bahnschrift Light" FontWeight="Bold" FontSize="36" Grid.Column="2">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
        </Button>
        <Button x:Name="OpenfileBtn" Content="Open file" HorizontalAlignment="Left" Margin="7,5,0,0" VerticalAlignment="Top" Click="OpenfileBtn_Click"/>
        <TextBox x:Name="FileNameTextBox" HorizontalAlignment="Left" Margin="71,5,0,0" TextWrapping="Wrap" Text="Here will be name of opened file" VerticalAlignment="Top" Width="180" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Button x:Name="PlotAllBtn" Content="PlotAll" HorizontalAlignment="Left" Margin="7,30,0,0" VerticalAlignment="Top" Click="PlotAllBtn_Click"/>
        <TextBox x:Name="TimeTextBox" HorizontalAlignment="Left" Margin="34,26,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label x:Name="FindAP_Label" Content="Find AP (time format mm:ss:ff)" HorizontalAlignment="Left" Margin="29,2,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Button x:Name="FindAPBtn" Content="Find by time" HorizontalAlignment="Left" Margin="159,25,0,0" VerticalAlignment="Top" Click="FindAPBtn_Click" Grid.Column="2"/>
        <WpfPlot x:Name="One_AP_Plot" Margin="694,0,10,0" VerticalAlignment="Top" Height="403" Grid.Column="2"/>
        <Button x:Name="SaveAP_Btn" Content="Save" HorizontalAlignment="Left" Margin="71,30,0,0" VerticalAlignment="Top" Click="SaveAP_Btn_Click"/>
        <Label x:Name="RdМ_lbl" Content="Radius of curvature (R)&#xA;Velocity (dV/dt)4 &#xA;Velocity (dV/dt)0" HorizontalAlignment="Left" Margin="469,361,0,0" VerticalAlignment="Top" Width="130" Visibility="Hidden" Grid.Column="2"/>
        <Label x:Name="RdV_num_lbl" Content="=&#xD;&#xA;=&#xD;&#xA;=" HorizontalAlignment="Left" Margin="599,361,0,0" VerticalAlignment="Top" Height="55" Width="90" Visibility="Hidden" Grid.Column="2"/>
        <WpfPlot x:Name="RdV0_Plot" Margin="10,70,25,0" VerticalAlignment="Top" Height="333" Width="350" Grid.ColumnSpan="2"/>
        <WpfPlot x:Name="RdV4_Plot" Margin="217,70,805,0" VerticalAlignment="Top" Height="333" Width="350" Grid.Column="1" Grid.ColumnSpan="2"/>
        <WpfPlot x:Name="dR_Plot" Margin="335,70,450,0" VerticalAlignment="Top" Height="333" Width="350" Grid.Column="2"/>
        <TextBox x:Name="Experiment_duration_label" HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" IsReadOnly="True" Background="Transparent" BorderThickness="0"  Text="Experiment duration:" VerticalAlignment="Top" Width="175" Grid.ColumnSpan="2"/>
        <TextBox x:Name="alpha_threshold_TextBox" HorizontalAlignment="Left" Margin="375,26,0,0" TextWrapping="Wrap" Text="0.9" VerticalAlignment="Top" Width="80" IsEnabled="False" Grid.Column="2"/>
        <TextBox x:Name="start_offset_TextBox" HorizontalAlignment="Left" Margin="501,25,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="80" IsEnabled="False" Grid.Column="2"/>
        <Label x:Name="alpha_threshold_label" Content="alpha-threshold (float)" HorizontalAlignment="Left" Margin="375,2,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Label x:Name="start_offset_label" Content="start-offset (int)" HorizontalAlignment="Left" Margin="501,2,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBox x:Name="refractory_period_TextBox" HorizontalAlignment="Left" Margin="599,25,0,0" TextWrapping="Wrap" Text="280" VerticalAlignment="Top" Width="80" IsEnabled="False" Grid.Column="2"/>
        <Label x:Name="refractory_period_label" Content="refractory-period (int)" HorizontalAlignment="Left" Margin="599,2,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <RadioButton x:Name="User_mode_bnt" Content="User mode" HorizontalAlignment="Left" Margin="235,9,0,0" VerticalAlignment="Top" Checked="User_mode_bnt_Checked" Grid.Column="2"/>
        <RadioButton x:Name="Banana_mode_bnt" Content="Banana mode" HorizontalAlignment="Left" Margin="235,28,0,0" VerticalAlignment="Top" Checked="Banana_mode_bnt_Checked" Grid.Column="2"/>
        <TextBox x:Name="NumberAP_TextBox" HorizontalAlignment="Left" Margin="34,47,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Button x:Name="FindAP_by_number_Btn" Content="Find by num" HorizontalAlignment="Left" Margin="159,46,0,0" VerticalAlignment="Top" Click="FindAP_by_number_Btn_Click" Grid.Column="2"/>
        <TextBox x:Name="window_size_TextBox" HorizontalAlignment="Left" Margin="375,62,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="80" Grid.Column="2"/>
        <Label x:Name="window_size_label" Content="window size (int)" HorizontalAlignment="Left" Margin="375,38,0,0" VerticalAlignment="Top" Grid.Column="2"/>
    </Grid>

</Window>